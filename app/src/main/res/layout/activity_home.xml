<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_headline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/tv_headline"
        android:fontFamily="monospace"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        style="@style/SpaceElementHorizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_man"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline_title"
        app:layout_constraintEnd_toStartOf="@+id/btn_woman"
        android:text="@string/btn_man"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="12dp"
        style="@style/StyleBtnHome" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_woman"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_man"
        app:layout_constraintTop_toBottomOf="@+id/tv_headline_title"
        android:text="@string/btn_woman"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="12dp"
        style="@style/StyleBtnHome" />

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_man"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>